{{#partial "contenido"}}
      <form class="form-consulta-metodologias" action="/metodologias/listado" method="GET">
        <h2 class="form-consulta-metodologias-heading">Consulta de Metodologías</h2>
      <hr>
        <div class="form-group col-md-12 row">
       
          <div class="col-md-6">
          <label for="metodologia">Metodología</label>
          <select class="custom-select" name="metodologia">
            {{#each metodologias}}
            <option>{{this}}</option>
            {{/each}}
          </select>
          </div>

          <div class="col-md-2">
          <label for="desde">Desde</label>
          <select class="custom-select" name="periodoDesde">
            {{#each periodosDesde}}
            <option>{{this}}</option>
            {{/each}}
          </select>
          </div>

          <div class="col-md-2">
          <label for="hasta">Hasta</label>
          <select class="custom-select" name="periodoHasta">
            {{#each periodosHasta}}
            <option>{{this}}</option>
            {{/each}}
          </select>
          </div>

          <div class="col-md-2">
          <button type="submit" class="btn" style="background-color: #8A5899; color: white;">Filtrar</button>
          </div>

        </div>
      </form>

		<form class="form-limpiar-metodologias row" action="/metodologias" method="GET">
 		<div class="float-right col-md-3">
          <button type="submit" class="btn" style="background-color: #656193; color: white;">Limpiar consulta</button>
        </div>
     	</form>
		<br>

      <table class="table table-hover">
        <thead class="thead-default">
          <tr>
            <th>#</th>
            <th>Empresa</th>
            <th>Conveniencia</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          {{#each metodologiasCalculadas}}
            <th scope="row">{{@index}}</th>
            <td>{{nombreEmpresa}}</td>
            <td>{{conveniencia}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{#if errorPeriodos}}
			<div class="alert alert-danger">
	    		Periodo Desde no puede ser mayor a Periodo Hasta.
			</div>
		{{/if}}
		{{#if errorCalculo}}
			<div class="alert alert-danger">
	    		Error al procesar la metodologia.Consulte al Administrador.
			</div>
		{{/if}}
{{/partial}}

{{>layout.hbs}}