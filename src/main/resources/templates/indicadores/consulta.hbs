{{#partial "contenido"}}
      <form class="form-consulta-indicadores" action="/indicadores/listado" method="GET">
        <h2 class="form-consulta-indicadores-heading">Consulta de Indicadores</h2>
      <hr>
        <div class="form-group col-md-12 row">
          <div class="col-md-3">
          <label for="selectEmpresa">Empresa</label>
          <select class="custom-select" name="empresa">
            <option selected>Todas</option>
            {{#each empresas}}
            <option>{{this}}</option>
            {{/each}}
          </select>
          </div>

          <div class="col-md-2">
          <label for="selectPeriodo">Período</label>
          <select class="custom-select" name="periodo">
            <option selected>2007</option>
            {{#each periodos}}
            <option>{{this}}</option>
            {{/each}}
          </select>
          </div>

          <div class="col-md-2">
          <button type="submit" class="btn btn-dark">Filtrar</button>
          </div>

        </div>
      </form>

      <table class="table table-hover">
        <thead class="thead-default">
          <tr>
            <th>#</th>
            <th>Empresa</th>
            <th>Período</th>
            <th>Indicador</th>
            <th>Valor</th>
            <th>Cuentas utilizadas</th>
          </tr>
        </thead>
        <tbody>
        {{#each indicadores}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td>{{empresa}}</td>
            <td>{{periodo}}</td>
            <td>{{nombre}}</td>
            <td>{{valor}}</td>
            <td>{{cuentasInvolucradas}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
{{/partial}}

{{>layout.hbs}}