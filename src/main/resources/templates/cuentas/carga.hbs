{{#partial "contenido"}}
	    <form class="form-carga-cuentas" action="/cuentas" method="POST">
	        <h2 class="form-carga-cuentas-heading">Carga de Cuentas</h2>
			<hr>
			  <div class="form-group col-md-8">
        		{{#if cargaExitosa}}
            		<div class="alert alert-success">
                		El archivo de cuentas se ha cargado con exito.
            		</div>
        		{{/if}}
        		{{#if cargaErronea}}
            		<div class="alert alert-danger">
                		Error en la carga. Consulte al Administrador.
            		</div>
        		{{/if}}
        		{{#if rutaVacia}}
            		<div class="alert alert-danger">
                		Por favor, primero seleccione un archivo.
            		</div>
        		{{/if}}
			    <label for="archivo">Archivo de Cuentas</label>
			    <label class="custom-file">
            	<input type="file" class="custom-file-input" name="archivo">
            	<span class="custom-file-control"></span>
          		</label>
          		<br>
			    <small id="emailHelp" class="form-text text-muted">El archivo se debe encontrar dentro de la carpeta 'Archivos de Prueba'.</small>
			    <button type="submit" class="btn" style="margin-top:10px;background-color: #8A5899; color: white;">Cargar</button>
			  </div>
	    </form>
{{/partial}}

{{>layout.hbs}}