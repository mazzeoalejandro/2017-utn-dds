{{#partial "contenido"}}
      <form class="form-consulta-cuentas" action="/cuentas/listado" method="GET">
        <h2 class="form-consulta-cuentas-heading">Consulta de Cuentas</h2>
      <hr>
        <div class="form-group col-md-12 row">
          <div class="col-md-2">
          <label for="tipo">Tipo</label>
          <select class="custom-select" name="tipo">
            {{#each tipos}}
            <option>{{this}}</option>
            {{/each}}
          </select>
          </div>

          <div class="col-md-3">
          <label for="periodo">Período</label>
          <select class="custom-select" name="periodo">
            {{#each periodos}}
            <option>{{this}}</option>
            {{/each}}
          </select>
          </div>

          <div class="col-md-4">
          <label for="empresa">Empresa</label>
          <select class="custom-select" name="empresa">
            {{#each empresas}}
            <option>{{this}}</option>
            {{/each}}
          </select>
          </div>

          <div class="col-md-2">
          <input type="text" class="form-control" name="Valor" placeholder={{valor}} >
          <!--<small id="emailHelp" class="form-text text-muted">Aclaracion sobre el ingreso de datos.</small>-->
          </div>

          <div class="col-md-1">
          <button type="submit" class="btn btn-dark">Filtrar</button>
          </div>

        </div>
       
      </form>

      <form class="form-limpiar-cuentas" action="/cuentas" method="GET">
 		<div class="float-right">
          <button type="submit" class="btn btn-dark">Limpiar consulta</button>
        </div>
      </form>

      <table class="table table-hover">
        <thead class="thead-default">
          <tr>
            <th>#</th>
            <th>Empresa</th>
            <th>Tipo</th>
            <th>Período</th>
            <th>Valor</th>
          </tr>
        </thead>
        <tbody>
          {{#each cuentas}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td>{{empresa.nombre}}</td>
            <td>{{tipo}}</td>
            <td>{{periodo}}</td>
            <td>{{valor}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
{{/partial}}

{{>layout.hbs}}