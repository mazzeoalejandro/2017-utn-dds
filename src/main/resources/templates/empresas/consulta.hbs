{{#partial "contenido"}}
      <form class="form-consulta-empresas" action="/empresas/listado" method="GET">
        <h2 class="form-consulta-empresas-heading">Consulta de Empresas</h2>
      <hr>
        <div class="form-group col-md-12 row">
        
          <div class="col-md-4">
          <label for="empresa">Nombre Empresa</label>
          <select class="custom-select" name="empresa">
            {{#each empresas}}
            <option>{{this}}</option>
            {{/each}}
          </select>
          </div>

          <div class="col-md-1">
          <button type="submit" class="btn" style="background-color: #8A5899; color: white;">Filtrar</button>
          </div>

        </div>
       
      </form>

      <form class="form-limpiar-empresas row" action="/empresas" method="GET">
 		<div class="float-right col-md-3">
          <button type="submit" class="btn" style="background-color: #656193; color: white;">Limpiar consulta</button>   
        </div>
      </form>
	  <br>
      <table class="table table-hover">
        <thead class="thead-default">
          <tr>
            <th>Id</th>
            <th>Nombre</th>
          </tr>
        </thead>
        <tbody>
          {{#each empresasMostrar}}
          <tr>
            <td>{{id}}</td>
            <td>{{nombre}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
{{/partial}}

{{>layout.hbs}}